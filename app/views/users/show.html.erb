<div class="my-6 d-flex mr-0">
  <div class="col-4 sticky-sidebar order-2">
   <%= render 'user_profile' %>
  </div>
  <div class="col-8 panel">
    <div class="cover-img mt-2">
      <%= image_tag('bg', class: 'cover-img') %>
    </div>
    <p id="notice"><%= notice %></p>
    <div class="panel-block d-flex mt-2">
      <div class="media">
        <div class="media-left">
          <h3 class="font-weight-bold">Tweets: <%= @user.tweets.count %> </h3>
        </div>
      </div>
    </div>      

      <% @tweets.each do |tweet| %>
        <div class="box my-3">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <div class="gravatar" style="background:transparent url(<%= gravatar_image_url('spam@spam.com'.gsub('spam', tweet.user.username), size: 64) %>) 0px 0px no-repeat; width:64px; height:64px;"></div>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <strong><%= link_to tweet.user.fullname, user_path(tweet.user) %> </strong><br>
                <small>@<%= tweet.user.username%></small>
              </div>
              <p><%= tweet.tweet %></p><br>
              <nav class="level">
                <div class="level-left is-mobile">
                  <%= edit_tweet_btn(tweet) %>
                  <%= delete_tweet_btn(tweet) %>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  <%= check_main(tweet) %>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  <p>Likes: <%= tweet.likes.count %> </p>
                </div>
              </nav>
              <div class='tweet-comments-section'>

                <%= comments(tweet) %>

                <%= comments_form(tweet) %>
              </div>
            </div>
          </article>
        </div>
      <% end %>

  </div>
</div>

