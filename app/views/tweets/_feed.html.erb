<div class="column col-8">
  
  <div class="my-4">
    <%= tweet_form %>
  </div>

  <h2 class="font-weight-bolder mb-3">Tweets:</h2>

<% @tweets.each do |tweet| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <div class="gravatar" style="background:transparent url(<%= gravatar_image_url('spam@spam.com'.gsub('spam', tweet.user.username), size: 64) %>) 0px 0px no-repeat; width:64px; height:64px;"></div>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= link_to tweet.user.fullname.capitalize, user_path(tweet.user) %> </strong><br>
          <small>@<%= tweet.user.username %></small>
        </div>
        <p><%= tweet.tweet %></p><br>
        <nav class="level">
  				<div class="level-left is-mobile">
            <% if tweet.user == current_user %>
              <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                <span class="icon"><i class="fas fa-pencil-alt"></i></span>
              <% end %>
              <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                  <span class="icon"><i class="far fa-trash-alt"></i></span>
              <% end %>
            <% end %>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <%= check_main(tweet) %>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <p>Likes: <%= tweet.likes.count %> </p>
  				</div>
  			</nav>
        <div class='tweet-comments-section'>

          <p><b>Comments:</b></p>
        
          <div class="border rounded p-2">
            <%= render partial: 'comments/comment', collection: tweet.comments %>
          </div><br>

          <%= comments_form(tweet) %>
        </div>
      </div>
    </article>
  </div>
<% end %>
</div>