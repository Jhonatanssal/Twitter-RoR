<div class="column col-4">
  <nav class="panel">
    <p class="panel-heading">
      Who to follow
    </p>
    <% @users.each do |user| %>
      <div class="panel-block">
        <article class="media d-flex align-items-center">
          <div class="media-left">
            <figure class="image is-32x32">
                <div class="gravatar image is-64x64" style="background:transparent url(<%= gravatar_image_url('spam@spam.com'.gsub('spam', user.username), size: 32) %>) 0px 0px no-repeat; width:32px; height:32px;"></div>
            </figure>
          </div>
          <div class="media-content">
            <div class="content d-flex align-items-center">
              <p>
                <strong><%= link_to user.fullname, user %></strong> <br>
                <small>@<%= user.username %></small>
              </p>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  </nav>
</div>