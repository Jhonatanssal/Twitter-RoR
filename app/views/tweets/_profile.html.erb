<nav class="bg-dark mb-3">
  <div class="p-3">
    <article class="media d-flex align-items-center">
      <div class="media-left">
        <figure class="image">
          <div class="gravatar" style="background:transparent url(<%= gravatar_image_url('spam@spam.com'.gsub('spam', current_user.username), size: 64) %>) 0px 0px no-repeat; width:64px; height:64px;"></div>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= link_to current_user.fullname.capitalize, user_path(current_user) %></strong><br>
          <small class="text-white">@<%= current_user.username %></small><br>
        </div>
      </div>
    </article>
  </div>
  <div class="panel-block d-flex justify-content-around mt-2 text-white">
    <div class="media d-flex justify-content-around">
      <div class="media-left d-flex flex-column align-items-center">
        <h3 class="font-weight-bold">Followers</h3>
        <p><%= current_user.followers.count %></p>
      </div>

      <div class="media-left d-flex flex-column align-items-center">
        <h3 class="font-weight-bold">Following</h3>
        <p><%= current_user.followings.count %></p>
      </div>

      <div class="media-left d-flex flex-column align-items-center">
        <h3 class="font-weight-bold">Tweets</h3>
        <p><%= current_user.tweets.count %> </p>
      </div>
    </div>
  </div>
</nav>